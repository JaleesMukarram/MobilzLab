<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_bg"
    tools:context=".Activities.AdminProblemDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/RLRepairRequestAdminOpenTopContainer"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/repair_request"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold" />



        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/RLRepairRequestAdminOpenContactContainer"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/CVRepairRequestAdminOpenProblemContainer"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/BTNRepairRequestAdminOpenCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_primary"
                    android:elevation="12dp"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:text="@string/call"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/BTNRepairRequestAdminOpenChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_primary"
                    android:elevation="12dp"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:text="@string/chat"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

            </LinearLayout>


        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/CVRepairRequestAdminOpenNumberContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CVRepairRequestAdminOpenNameContainer"
            android:layout_margin="12dp"
            android:elevation="12dp"
            android:padding="10dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TVRepairRequestAdminOpenNumberHintShowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/number"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVRepairRequestAdminOpenNumberShowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TVRepairRequestAdminOpenNumberHintShowing"
                    android:padding="10dp"
                     android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/CVRepairRequestAdminOpenAddressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CVRepairRequestAdminOpenNumberContainer"
            android:layout_margin="12dp"
            android:elevation="12dp"
            android:padding="10dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TVRepairRequestAdminOpenAddressHintShowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/address"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVRepairRequestAdminOpenAddressShowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TVRepairRequestAdminOpenAddressHintShowing"
                    android:padding="10dp"
                     android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/CVRepairRequestAdminOpenMobileContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CVRepairRequestAdminOpenAddressContainer"
            android:layout_margin="12dp"
            android:elevation="12dp"
            android:padding="10dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TVRepairRequestAdminOpenMobileHintShowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/mobile"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVRepairRequestAdminOpenMobileShowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TVRepairRequestAdminOpenMobileHintShowing"
                    android:padding="10dp"
                     android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/CVRepairRequestAdminOpenProblemContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CVRepairRequestAdminOpenMobileContainer"
            android:layout_margin="12dp"
            android:elevation="12dp"
            android:padding="10dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TVRepairRequestAdminOpenProblemHintShowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/problem_details"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVRepairRequestAdminOpenProblemShowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TVRepairRequestAdminOpenProblemHintShowing"
                    android:padding="10dp"

                     android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/CVRepairRequestAdminOpenNameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RLRepairRequestAdminOpenTopContainer"
            android:layout_margin="12dp"
            android:elevation="12dp"
            android:padding="10dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TVRepairRequestAdminOpenNameHintShowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVRepairRequestAdminOpenNameShowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TVRepairRequestAdminOpenNameHintShowing"
                    android:padding="10dp"
                     android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</ScrollView>