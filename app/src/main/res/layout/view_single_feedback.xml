<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:padding="10dp"
     android:elevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/round_second_primary"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TVSingleFeedbackNameShowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/productb"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/TVSingleFeedbackDateShowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="40dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorGray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVSingleFeedbackFeedbackShowing"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVSingleFeedbackNameShowing"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/product"
            android:padding="20dp"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </RelativeLayout>


</RelativeLayout>