<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/RLFragmentContactUsTopOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">


            <include
                android:id="@+id/INCFragmentContactUsContactWays"
                layout="@layout/contact_ways_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

        </RelativeLayout>


        <include
            android:id="@+id/INCContactUsAddressAndTimeContainer"
            layout="@layout/address_and_time"
            android:layout_width="match_parent"
            android:layout_below="@+id/RLFragmentContactUsTopOptions"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp" />


    </RelativeLayout>


</ScrollView>